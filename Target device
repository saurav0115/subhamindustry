<body>
  <div class="container">
    <h2>Target Device Control Panel</h2>
    <p class="status">Status: <span id="deviceStatus">Disconnected</span></p>
    <button class="btn" onclick="connectDevice()">Connect</button>
    <button class="btn" onclick="toggleDevice()">Toggle Power</button>
    <p id="log"></p>
  </div>

  <script>
    let isConnected = false;
    let isOn = false;

    function connectDevice() {
      isConnected = true;
      document.getElementById('deviceStatus').innerText = 'Connected';
      log('Device connected');
    }

    function toggleDevice() {
      if (!isConnected) {
        log('Please connect the device first.');
        return;
      }
      isOn = !isOn;
      const state = isOn ? 'ON' : 'OFF';
      log('Device turned ' + state);
    }

    function log(message) {
      document.getElementById('log').innerText = message;
    }
  </script>
</body>
